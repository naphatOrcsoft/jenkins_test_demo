name: Release (Jar)

on:
  push:
    tags:
      - 'v*.*.*'

jobs:
  release:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '8'
          cache: maven
      - run: mvn -B -ntp -DskipTests package
      - name: Create Release
        id: cr
        uses: softprops/action-gh-release@v2
        with:
          generate_release_notes: true
      - name: Upload jar
        uses: softprops/action-gh-release@v2
        with:
          files: target/*.jar
